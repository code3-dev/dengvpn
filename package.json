{
  "name": "dengvpn",
  "description": "Free & Unlimited VPN Service",
  "version": "1.5.0",
  "main": "loader.js",
  "bin": "loader.js",
  "homepage": "https://github.com/code3-dev/dengvpn",
  "scripts": {
    "start": "electron .",
    "verify-core": "node verify-core.js",
    "obfuscate": "node obfuscate.js",
    "build": "pnpm verify-core && pnpm obfuscate && electron-builder",
    "build:win": "pnpm verify-core && pnpm obfuscate && electron-builder --win",
    "build:linux": "pnpm verify-core && pnpm obfuscate && electron-builder --linux"
  },
  "author": {
    "name": "Hossein Pira",
    "email": "h3dev.pira@gmail.com"
  },
  "license": "MIT",
  "type": "commonjs",
  "devDependencies": {
    "electron": "^34.0.2",
    "electron-builder": "^26.0.12",
    "javascript-obfuscator": "^4.1.0"
  },
  "dependencies": {
    "axios": "^1.8.4",
    "sudo-prompt": "^9.2.1"
  },
  "build": {
    "compression": "maximum",
    "protocols": [
      {
        "name": "proxycloud gui",
        "schemes": [
          "proxycloud-gui"
        ]
      }
    ],
    "appId": "com.dengvpn.app",
    "productName": "DengVPN",
    "icon": "assets/icon.png",
    "files": [
      "dist/**/*",
      "node_modules/**/*",
      "assets/**/*",
      "loader.js",
      "core/**/*",
      "main.js",
      "preload.js"
    ],
    "extraResources": [
      {
        "from": "core",
        "to": "core",
        "filter": [
          "**/*"
        ]
      }
    ],
    "directories": {
      "output": "release"
    },
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "assets/icon.ico",
      "requestedExecutionLevel": "requireAdministrator",
      "artifactName": "${productName}-${version}-${arch}.${ext}"
    },
    "nsis": {
      "allowToChangeInstallationDirectory": true,
      "oneClick": false,
      "license": "./LICENSE"
    },
    "linux": {
      "target": [
        "deb",
        "tar.gz",
        "rpm",
        "AppImage"
      ],
      "category": "Network",
      "icon": "assets/icon.png",
      "maintainer": "h3dev.pira@gmail.com",
      "artifactName": "${productName}-${version}-${arch}.${ext}"
    },
    "deb": {
      "artifactName": "${productName}-${version}-${arch}.${ext}"
    },
    "rpm": {
      "artifactName": "${productName}-${version}-${arch}.${ext}"
    },
    "appImage": {
      "artifactName": "${productName}-${version}-${arch}.${ext}"
    },
    "asar": true,
    "npmRebuild": false
  }
}